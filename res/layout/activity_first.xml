                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:paddingLeft="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电台" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dip"
                            android:text="这是该电台的介绍" />
